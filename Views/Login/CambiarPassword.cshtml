@model ProyectoEcommerce.Models.PasswordViewModel
@{
    ViewData["Title"] = "CambiarPassword";
}

<div class ="row">
    <div class=" card">
        <div class=" card-title text-center">
            <h3> Cambiar Contraseña</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Contraseña actual" />
                    <span asp-validation-for="OldPassword" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nueva contraseña" />
                    <span asp-validation-for="NewPassword" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirmar contraseña" />
                    <span asp-validation-for="Confirm" class="text-warning"></span>
                </div>
                <hr />
                <div class="form-group mt-2 text-center">
                    <input type="submit" value="Cambiar Contraseña" class="btn-sm btn-outline-primary" />
                    <a asp-action="EditarUsuario" class="btn-sm btn-outline-success">Regresar</a>
                </div>
            </form>          
        </div>
    </div>
</div>
