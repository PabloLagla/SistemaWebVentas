@model ProyectoEcommerce.Models.Entidades.Usuario
@{
    ViewData["Title"] = "EditarUsuario";
}

<div class=" row">
    <div class=" col-md-8">
        <div class=" card">
            <div class=" card-header text-center">
                <h4>Editar Usuario</h4>
            </div>
            <div class=" card-body">
                <form asp-action="EditarUsuario" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="URLFoto" />

                    <div class=" form-group">
                        <label></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre" autocomplete="off" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label></label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefono" autocomplete="off" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="URLFoto" class="control-label"></label>
                        <input type="file" class="form-control mb-3" name="Imagen">
                        <span asp-validation-for="URLFoto" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" value="Guardar" class="btn-sm btn-outline-success" />
                        <a asp-action="CambiarPassword" class="btn-sm btn-outline-primary">Cambiar Contraseña</a>
                    </div>
                </form>
            </div>            
        </div>
        
    </div>
    <div class="col-md-4">
        <img src="@Model.URLFoto" style="width:200px;height:200px;border-radius:50%" />
    </div>
</div>
