@model ProyectoEcommerce.Models.Entidades.Producto
@{
    ViewData["Title"] = "Detalles";
    Layout = null;
}

<div class="card text-center">
    <div class=" card-header">
        <h5 class=" text-center">Detalles del Producto</h5>
    </div>
    <div class=" car-body">
        <dl class="row">

            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Descripción</dt>
            <dd class="col-sm-10">@Model.Descripcion</dd>

            <dt class="col-sm-2">Precio</dt>
            <dd class="col-sm-10">L. @Model.Precio</dd>

            <dt class="col-sm-2">Foto</dt>
            <dd class="col-sm-10"><img src="@Model.URLFoto" width=" 200" height=" 200" /></dd>

        </dl>
    </div>
    <div>
        <button type="button" class="btn btn-sm btn-success" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Volver al catálogo</button>
    </div>
</div>



